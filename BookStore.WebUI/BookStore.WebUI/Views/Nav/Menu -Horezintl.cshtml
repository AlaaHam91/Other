@model IEnumerable<string>
<div class="btn-group btn-group-sm btn-group-justifed">
@Html.ActionLink("Home", "List", "Book", null, new { @class = "btn btn-default btn-sm" })
@foreach (var link in Model)
{
    @Html.RouteLink(link,
        new
        {
            controller = "Book",
            action = "List",
            specilization = link,
            pagenum = 1
        }, 
        new { @class = "btn btn-default btn-sm " 
        + ( (ViewBag.SelectedSpec == link) ? "btn-primary" : "").ToString()})
}
    </div>