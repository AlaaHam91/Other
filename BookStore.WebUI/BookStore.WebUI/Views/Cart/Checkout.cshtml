        <label>Line1:</label>
        @Html.TextAreaFor(x => x.Line1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Line2:</label>
        @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>State:</label>
        @Html.TextAreaFor(x => x.State, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>City:</label>
        @Html.TextAreaFor(x => x.City, new { @class = "form-control" })
    </div>*@

    <h3>Options</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.GiftWrap)
            Gift Warp these book(s)
        </label>
    </div >
    <div class="text-center">

        <input type="submit" class="btn btn-primary" value="Complete order" />
    </div>
}

