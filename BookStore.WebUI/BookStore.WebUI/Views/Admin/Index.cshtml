@model IEnumerable<BookStore.Domain.Entity.Book>

@{
    ViewBag.Title = "Admin:All Books";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Index</h2>


<div class="panel-default">
    <div class="panel-heading">
    <h3>All Books</h3>

        <div class="text-right form-group">
            <form action="Index" method="post">
                <input type="text" name="SearchValue" style="width:200px" placeholder="Please enter a search key" />
                <input type="submit" value="Search" class="btn btn-info" />

                </form>
            </div>
       

    </div>
    <div class="panel-body">
        <table class="table table-condensed table-striped table-bordered">
            <tr>
                <th class="text-right">
                     ID            
                </th>
                <th>
                    Title
                </th>
                <th class="text-right">
                    Price
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td >
                        @Html.ActionLink(item.Title,"Edit",new {item.ISBN })
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="text-right">
                        @item.Price.ToString("c")
                    </td>

                    <td class="text-center">
                      
                        @Html.ActionLink("Delete", "Delete", new { ISBN = item.ISBN },new {@class="btn btn-danger btn-xs" })
                    </td>
                </tr>
            }

        </table>
        <div class="panel-footer">
         
                @Html.ActionLink("Add New Book", "Create",null,new {@class="btn btn-default" })
           

        </div>
        </div>
</div>

