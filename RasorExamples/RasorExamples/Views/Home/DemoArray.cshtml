@*@model RasorExamples.Models.Product[]*@
@using RasorExamples.Models
@model Product []
@{
    // Layout = null;
    Layout = "~/Views/_BasicLayout.cshtml";
}

@if (Model.Length > 0)
{
    <table> 
        
        <thead>
           <tr> 
               <th> Product Name: </th> <th> Product Price: </th> 
          </tr>
        </thead> 
    
    <tbody>

       @* @foreach (RasorExamples.Models.Product p in Model)*@
           @foreach (Product p in Model)
        {
         <tr>
             <td>@p.Name </td>
             <td>@p.Price </td>

             </tr>    
        }

        </tbody>
    
    </table>
}
else
{
 @:No products
}